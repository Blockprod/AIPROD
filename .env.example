# ============================================================================
# AIPROD - Environment Variables Template
# ============================================================================
# Copier ce fichier en .env et remplir les valeurs appropri√©es
# Do NOT commit .env to version control!
#
# Usage:
#   cp .env.example .env
#   # Edit .env with your values
#   export $(cat .env | xargs)
# ============================================================================


# ============================================================================
# CORE CONFIGURATION
# ============================================================================

# Google Cloud Project Configuration
GCP_PROJECT_ID=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/gcp-key.json

# Cloud Storage Configuration
BUCKET_NAME=aiprod-assets
BUCKET_REGION=us-central1
BUCKET_LIFECYCLE_DAYS=90

# Environment (development, staging, production)
ENVIRONMENT=development
LOG_LEVEL=INFO


# ============================================================================
# API KEYS & CREDENTIALS
# ============================================================================

# Google Gemini API
GEMINI_API_KEY=your-gemini-api-key
GEMINI_API_RATE_LIMIT=60  # Requests per minute

# Video Generation Backends
REPLICATE_API_KEY=optional-replicate-key
RUNWAY_API_KEY=optional-runway-key

# Other services
WANDB_API_KEY=optional-wandb-key


# ============================================================================
# PERFORMANCE & OPTIMIZATION
# ============================================================================

# Caching Configuration
CACHE_TTL_SECONDS=86400          # 24 hours
CACHE_CONSISTENCY_TTL=604800     # 7 days
CACHE_BATCH_TTL=3600             # 1 hour

# Performance Tuning
MAX_WORKERS=4
MAX_BATCH_SIZE=4
LAZY_LOAD_THRESHOLD_MB=10

# GPU Configuration (if applicable)
DEVICE=cpu                        # cpu or cuda
GPU_MEMORY_FRACTION=0.8
ENABLE_MIXED_PRECISION=false


# ============================================================================
# CLOUD RUN SPECIFIC
# ============================================================================

# Port Configuration
PORT=8080

# Concurrency
CLOUD_RUN_CONCURRENCY=10
CLOUD_RUN_MAX_INSTANCES=100
CLOUD_RUN_MIN_INSTANCES=1

# Memory & CPU
CLOUD_RUN_MEMORY=8Gi
CLOUD_RUN_CPU=4

# Timeouts (seconds)
REQUEST_TIMEOUT=300
VIDEO_GENERATION_TIMEOUT=600


# ============================================================================
# DATABASE & PERSISTENCE
# ============================================================================

# Checkpoint Configuration
CHECKPOINT_STORAGE_PATH=./models/checkpoints
CHECKPOINT_RETENTION_DAYS=30

# Model Cache
MODEL_CACHE_PATH=./models/cache
DOWNLOAD_MODELS_ON_START=false


# ============================================================================
# MONITORING & LOGGING
# ============================================================================

# Cloud Logging
LOGGING_LEVEL=INFO
LOG_FLUSH_INTERVAL=10

# Cloud Monitoring
ENABLE_METRICS=true
METRICS_INTERVAL_SECONDS=60
ALERT_EMAIL=your-email@example.com

# APM (Application Performance Monitoring)
ENABLE_TRACING=false
TRACE_SAMPLE_RATE=0.1


# ============================================================================
# SECURITY
# ============================================================================

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,https://yourapp.com
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW_SECONDS=3600

# Authentication
AUTH_ENABLED=true
JWT_SECRET=your-super-secret-key-change-this
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# API Key Authentication
API_KEYS=key1:secret1,key2:secret2


# ============================================================================
# VIDEO PROCESSING
# ============================================================================

# Video Quality Parameters
DEFAULT_RESOLUTION=1920x1080
DEFAULT_FPS=30
DEFAULT_BITRATE=4000k
DEFAULT_CODEC=h264

# Processing Options
ENABLE_QUALITY_ENHANCEMENT=true
ENABLE_TEMPORAL_CONSISTENCY=true
ENABLE_STYLE_TRANSFER=false

# Duration Limits (seconds)
MIN_VIDEO_DURATION=10
MAX_VIDEO_DURATION=600
DEFAULT_DURATION=120


# ============================================================================
# COST & BUDGET
# ============================================================================

# Budget Configuration
MONTHLY_BUDGET_USD=10000
DAILY_BUDGET_USD=500
ALERT_COST_THRESHOLD_PERCENT=80

# Cost Optimization
PREFER_SPOT_INSTANCES=false
PREFER_NON_PREMIUM_GPU=true
ENABLE_BATCH_OPTIMIZATION=true


# ============================================================================
# DEVELOPMENT ONLY
# ============================================================================

# Debug Mode
DEBUG=false
VERBOSE=false

# Testing
DEBUG_ENDPOINTS_ENABLED=false
MOCK_EXTERNAL_SERVICES=false

# Model Downloads (development)
FORCE_MODEL_DOWNLOAD=false
SKIP_MODEL_VALIDATION=false

# Hot Reload
ENABLE_HOT_RELOAD=false


# ============================================================================
# ADVANCED CONFIGURATION
# ============================================================================

# Feature Flags
FEATURE_STABLE_DIFFUSION=false
FEATURE_STYLE_TRANSFER=false
FEATURE_MULTI_LANGUAGE=false
FEATURE_BATCH_PROCESSING=true

# Advanced Optimization
ENABLE_KERNEL_FUSION=false
ENABLE_KERNEL_COMPILATION=false
QUANTIZATION_MODE=fp16

# Custom Hooks
WEBHOOK_SUCCESS_URL=
WEBHOOK_FAILURE_URL=
WEBHOOK_TIMEOUT_SECONDS=30
